<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="@dimen/_9sdp"
        android:text="Select Language"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_11sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/radio_english"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"
            android:padding="@dimen/_8sdp"

            android:text="Hindi"
            android:textColor="#D81A0C" />

        <TextView
            android:id="@+id/radio_spanish"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Bengali"
            android:textColor="#FFC107" />

        <TextView
            android:id="@+id/radio_french"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"

            android:padding="@dimen/_8sdp"
            android:text="Marathi"
            android:textColor="#03A9F4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_11sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/radio_south"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Tamil"
            android:textColor="#DF6F4B" />

        <TextView
            android:id="@+id/radio_bengli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"
            android:padding="@dimen/_8sdp"

            android:text="Gujarati"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/radio_hindi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_border_unselected"

            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Urdu"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_11sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/radio_german"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="0.2"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Telugu"
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/radio_chinese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_9sdp"
            android:layout_weight="0.2"
            android:background="@drawable/radio_button_border_unselected"
            android:gravity="center"

            android:padding="@dimen/_5sdp"
            android:text="English"
            android:textColor="#8BC34A" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/appcolor"
            android:layout_marginStart="8dp"
            android:text="Save Change" />
    </LinearLayout>
</LinearLayout>
