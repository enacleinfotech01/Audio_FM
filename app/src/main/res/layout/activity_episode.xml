<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    android:orientation="vertical"
    tools:context=".activity.EpisodeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/keyboard_arrow_down_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

        <ImageView
            android:id="@+id/bluetooth"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/headphones_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            app:tint="@color/gray" />

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/more_vert_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Aditya ki badtmazi"
            android:textColor="#989696" />

        <TextView
            android:id="@+id/go"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_background"
            android:drawableRight="@drawable/open_in_new_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Go To Show"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/musicSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:progressTint="@color/white"
        android:secondaryProgressTint="@color/white"
        android:thumbTint="@color/white"
        android:tickMarkTint="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp">

        <TextView
            android:id="@+id/starttimeline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4:44" />

        <TextView
            android:id="@+id/endtimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:44" />
    </LinearLayout>

    <TextView
        android:id="@+id/musicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Episode1"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/beforemusic"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/after"
            app:tint="#989696" />

        <ImageView
            android:id="@+id/forward10sec"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/forward_10_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

        <ImageView
            android:id="@+id/playmusic"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:src="@drawable/play_arrow_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

        <ImageView
            android:id="@+id/replay10sec"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:src="@drawable/replay_10_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

        <ImageView
            android:id="@+id/nextmusic"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/next"
            app:tint="#989696" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="1x Speed"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/show_dialog_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.6"
            android:background="@drawable/rounded_background"
            android:drawableLeft="@drawable/timer_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Time off"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>